@model Project.Models.VehicleViewModel
@{
    ViewBag.Title = "RentOneDay";
}



<h2>Rent for 1 DAY</h2>
<br />
<h3>Summary</h3>
<address>
    Duration = 1 day <br />
    Price = £30 <br />
    Wrexham, LL13 0NP<br />
    <abbr title="Phone">P:</abbr>
    01978 545654
</address>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
    <div>
        <script type="text/javascript">


            function show_alert() {

                var msg = "Congratulations you haved booked this car 1 Day!";

                alert(msg);

            }

        </script>
        @Html.DropDownList("VehivleList1", ViewBag.vehiclelistname as SelectList, "Please select a car")
        <form action="/Home/RntOne" method="post">
            First Name: <input type="text" id="TxtFName" name="F_name" value="" /><br />
            Last Name: <input type="text" id="TxtLName" name="L_name" value="" /><br />
            Company Name: <input type="text" id="TxtCName" name="Company_name" value="" /><br />
            Address: <input type="text" id="TxtAddress" name="Address" value="" /><br />
            Drivers License: <input type="text" id="TxtLicense" name="Drivers_license_no" value="" /><br />
            Phone number: <input type="text" id="TxtNumber" name="Phone_number" value="" /><br />
            <input type="submit" name="BtnSave" value="Click here to book" OnClick="show_alert()" />

        </form>
    </div>

</body>
</html>


@if (Model != null)
{
    <ul class="list-group">
        <li class=" list-group-item active"> Vehicle information</li>
        <li class=" list-group-item "> Vehcile reg :<b> @Model.Vehicle_reg </b></li>
        <li class=" list-group-item "> Vehcile reg :<b> @Model.Make </b></li>
    </ul>
}